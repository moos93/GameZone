@model Game
@await Html.PartialAsync("_CommonResources")
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@await Html.PartialAsync("_CommonResources")
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-dark bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">@Localizer["DELETE GAME"]</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <input asp-for="Id" hidden />
            <div class="border p-3 mt-4">
                <div class="form-floating py-2 col-12">
                    <input asp-for="Id" disabled class="form-control border-0 shadow" />
                    <label asp-for="Id" class="ms-2"> @Localizer["Id"] </label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Name" disabled class="form-control border-0 shadow" />
                    <label asp-for="Name" class="ms-2"> @Localizer["Name"] </label>
                </div>

                <div class="row mt-3">
                    <div class="col-6 col-md-3">
                        <button type="button" class="btn btn-outline-danger form-control" onclick="deleteAlert()">@Localizer["Delete"]</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Game" asp-action="Index" class="btn btn-dark border  form-control">
                            @Localizer["Back To List"]
                        </a>
                    </div>
                </div>


            </div>
        </form>
    </div>
</div>

