@model List<Game>

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-dark bg-dark ml-0 py-3">
        <div class="row ">
            <div class="col-12 text-center ">
                <h2 class="text-white py-2 ">Game List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Games" asp-action="Create" class="btn btn-outline-success">
                    <i class="bi bi-plus-square"></i> Create New Game 
                </a>
            </div>
        </div>

        <table class="table table-bordered table-striped  table-hover">
            <thead>
                <tr>
                  
                    <th class="text-center text-white bg-dark bg-dark">
                        Game Name
                    </th>
                    <th class="text-center text-white bg-dark bg-dark">
                        Description
                    </th>
                    <th class="text-center text-white bg-dark bg-dark">
                        Level
                    </th>
                    <th class="text-center text-white bg-dark bg-dark">
                        Modify
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model.OrderBy(u => u.Id))
                {

                    <tr class="text-center">
                        
                        <td>@obj.Name</td>
                        <td class="text-center">
                            @obj.Description
                        </td>
                        <td class="text-center">
                            @obj.Level
                        </td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Games" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-secandary mx-2 ">
                                    <i class="bi bi-pencil-square text-info"></i>
                                </a>
                                <a asp-controller="Games" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-secandary mx-2">
                                    <i class="bi bi-trash text-danger"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>