<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/x-icon" href="/imgs/n2.png">
    <title>@ViewData["Title"] - GameZone</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GameZone.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11.13.0/dist/sweetalert2.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark  border-bottom box-shadow mb-3 ">
            <div class="container-fluid">
                <a style="font-size:2rem"  class="navbar-brand text-white " asp-area="" asp-controller="Home" asp-action="Index"> <i class="bi bi-controller"></i> </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a style="font-size:1.1rem" class="nav-link  text-white pe-3" asp-area="" asp-controller="Home" asp-action="Index"> <i class="bi bi-house"></i> Home</a>
                        </li>
                        <li class="nav-item">
                            <a style="font-size:1.1rem" class="nav-link  text-white pe-3" asp-area="" asp-controller="Games" asp-action="Index"> <i class="bi bi-joystick"></i> Games</a>
                        </li>
                        <li class="nav-item">
                            <a style="font-size:1.1rem" class="nav-link  text-white pe-3" asp-area="" asp-controller="Home" asp-action="Privacy"> <i class="bi bi-lock"></i> Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
   
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-white navbar-dark bg-dark">
        <div class="container">
            &copy- Mohammad Mosbah 2024  <i style="margin-right:-60px" class="bi bi-mailbox-flag float-end"></i>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
